<% layout('/layouts/boilerplate.ejs')%>


<div class="row">
    <h1 class="text-center">Edit Place</h1>
    <div class="col-6 offset-3">
        <form action="/places/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form">

            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title %>"  required>
                <div class="valid-feedback">
                    Owkizay
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control"  type="text" id="location" name="campground[location]" value="<%= campground.location%>" required>
                <div class="valid-feedback">
                    Owkizay
                </div>
            </div>

            <!-- TODO: Add images from Edit Form -->
            <div class="mb-3">
                <label class="form-label" for="image">Add Images</label>
                <input type="file" name="image" id="image" multiple> <!--Match multer whats looking for "image" -->
            </div>


            <div class="mb-3">
                <label class="form-label" for="price">Place Total Cost</label>

                <div class="input-group">
                    <span class="input-group-text" id="price-label">RON </span>
                    <input type="text" class="form-control" id="price" name="campground[price]" placeholder="0.00" aria-label="price" aria-describedby="price-label" value="<%=campground.price %>" required>
                    <div class="valid-feedback">
                        Owkizay
                    </div>
                </div>
            </div>


            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control"  type="text" id="description" name="campground[description]" required>
                    <%= campground.description%>
                </textarea>
                <div class="valid-feedback">
                    Owkizay
                </div>
            </div>



            <div class="md-3">
                <button class="btn btn-success">Update Place</button>
            </div>

        </form>
    </div>

    <!-- Back to added POST-->
    <a href="/places/<%= campground._id%>">Back To Place</a>
</div>